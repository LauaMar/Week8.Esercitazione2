@model ProductViewModel

<h1>Delete product</h1>


    <div >
        <h3>Confirm product removal</h3>
        <h5 >Are you sure you want to remove the product with id @Model.Id ? </h5>
        <form href="#" asp-action="DeletePost">
            <input type="submit" class="btn btn-danger" />
            <input asp-for="Id" hidden />
        </form>
        <a type="button" asp-controller="Products" asp-action="Index" class="btn btn-primary">No</a>
    </div>




